ul.nav 
    
    if !loggedIn
        li.nav__login 
            a(href="/login") 
                i.fas.fa-user.fa-lg
        li.nav__join 
            a(href="/join")
                i.fas.fa-user-plus.fa-lg 
    else 
        li 
            a(href=`/users/${user._id}/memo`)
                i.far.fa-sticky-note.fa-lg 
        li 
            a(href=`/users/${user._id}/detail`)
                i.far.fa-user-circle.fa-lg 
        li 
            a(href="/users/search")
                i.fas.fa-user-friends.fa-lg 
        li 
            a(href="/logout")
                i.fas.fa-power-off.fa-lg 