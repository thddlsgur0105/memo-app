extends base.pug

block content 
    .card.card-profile 
        .card__img 
            i.fas.fa-user-alt.fa-3x 
            span 내 정보
        .card__description 
            .card__username 
                span= `이름: ${user.username}`
            .card__email 
                span= `이메일: ${user.email}`
            .card__location   
                span= `거주지: ${user.location}`
            
    .card.card-profile 
        .card__img 
            i.fas.fa-user-friends.fa-3x 
            span 친구목록
        .card__friends 
            each one in user.friends     
                div.card
                    .card__img 
                        i.fas.fa-user.fa-lg  
                    .card__description
                        span=one